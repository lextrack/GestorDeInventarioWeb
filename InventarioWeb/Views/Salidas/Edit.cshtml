@model InventarioWeb.Models.Salida

@{
    ViewData["Title"] = "Edit";
}

<h2 class="row p-2 mb-1">Editar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalidaID" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoID" class="control-label"></label>
                <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.ProductoID"></select>
                <span asp-validation-for="ProductoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Actualizar" class="btn btn-outline-info" />
                <a asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
