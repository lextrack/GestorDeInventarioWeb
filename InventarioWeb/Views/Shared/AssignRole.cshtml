@model (string UserId, string RoleName)

@{
    ViewData["Title"] = "Asignar rol";
}

<h2>Asignar rol a usuario</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label for="UserId">ID del usuario:</label>
        <input type="text" id="UserId" name="userId" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="RoleName">Nombre del tipo de rol (Admin o User):</label>
        <input type="text" id="RoleName" name="roleName" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-outline-info"> Asignar rol</button>
</form>